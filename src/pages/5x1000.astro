<Layout title={SEO.title} description={SEO.description}>
	<!-- <Hero classes="h-full" title={header.title} text={header.text} /> -->
	 <Section padding='' classes="h-screen">
		<div class="h-screen py-24 flex flex-col items-start justify-between gap-4">
			<Image src={Logo} alt="RIASISSU Logo" class="h-64 w-64" />
			<h1 class="text-left" set:html={header.title}></h1>
			<Row>
				<Col span="12" align="" classes="max-w-4xl mx-auto">
						<h3 class="text-pretty">Basta indicare e chiedere di indicare il Codice Fiscale della <strong>RIASISSU</strong>
							nella sezione preposta nella propria <strong>dichiarazione dei redditi</strong></h3>
	
					</Col>
				</Row>
				<div class="w-full flex flex-col items-center">
					<Icon class="align-center h-16 w-16 text-pretty" name="chevron-down" />
				</div>
			
		</div>		
	 </Section>
	<Section padding=''>

		</Section>
		<Section padding=''>
		<Row><Col span="12" align="center" classes="max-w-4xl mx-auto">
				<h2 class="text-pretty"><strong>REGIONE SOCIALE</strong></h2>
				<h4>RETE ITALIANA DELL3 ALLIEV3 DELLE SCUOLE E DEGLI ISTITUTI DI STUDI SUPERIORI
					UNIVERSITARI - APS</h4>
		</Col></Row>
		</Section>
		<Section padding='top'>
		<Row>
		
			<Col span="12" align="center" classes="mb-12 max-w-4xl mx-auto">
					<h2 class="text-pretty"><strong>CODICE FISCALE</strong></h2>
			</Col>
			</Row>
			<Row>
				<Col span="12" align="center" classes="mb-12 max-w-4xl mx-auto">
						<div class="flex flex-row items-center gap-4">
							<h2 id="cf-text" class="mb-0 text-pretty border-b px-2 py-2 border-neutral-600 border-l border-r">93086750507</h2>
							<button id="cf-button"><Icon id="icon1" class="h-8 w-8" name="clipboard-document-list" /><Icon id="icon2" class="h-8 w-8 hidden" name="cliboard-document-check" /></button>
						</div>	
					</Col>
				</Row>
	</Section>

</Layout>

<script>
const button = document.getElementById('cf-button');

button.addEventListener('click', () => {
	const text = document.getElementById('cf-text').textContent;
	const icon1 = document.getElementById('icon1');
	const icon2 = document.getElementById('icon2');

	console.log(text);
	navigator.clipboard.writeText(text)
      .then(function() {
		icon1.classList.add('hidden');
		icon2.classList.remove('hidden');	
        setTimeout(function() {
			icon2.classList.add('hidden');
			icon1.classList.remove('hidden');	
        }, 3000);
      })
      .catch(function() {
        alert('Failed to copy!');
      });
	
})
</script>


