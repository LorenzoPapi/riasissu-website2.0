---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/PageHeader.astro'
import SimpleFeed from '../components/blocks/feeds/BasicFeed.astro'
import CTA from '../components/blocks/CTA/BasicLight.astro'

// Data
import feedData from '../data/json-files/changelogData.json'
import giunteData from '../data/json-files/storicoData.json'
import { Image } from 'astro:assets'

// Content
// - SEO
const SEO = {
	title: "RIASISSU | Scuole d'eccellenza in Italia",
	description:
		"Esplora la storia delle giunte della RIASISSU, con dettagli sui coordinatori, vice, tesorieri e segretari che hanno guidato l'associazione nel corso degli anni."
}
// - Page Header
const header = {
	title: 'Storia delle <strong>Giunte</strong> della RIASISSU',
	text: ''
}

const processData = giunteData.map((item) => {
	return {
		title: '',
		date: `${item.year}`,
		text: `<ul>${
			item.roles.coordinatore
				? `<li><strong>Coordinatore:</strong> ${item.roles.coordinatore.firstName} ${item.roles.coordinatore.lastName}</li>`
				: ''
		}
		${
			item.roles.vice
				? `<li><strong>Coordinatore Vicario:</strong> ${item.roles.vice.firstName} ${item.roles.vice.lastName}</li>`
				: ''
		}
		${
			item.roles.tesoriere
				? `<li><strong>Tesoriere:</strong> ${item.roles.tesoriere.firstName} ${item.roles.tesoriere.lastName}</li>`
				: ''
		}
		${
			item.roles.segretario
				? `<li><strong>Segretario:</strong> ${item.roles.segretario.firstName} ${item.roles.segretario.lastName}</li>`
				: ''
		}
		
		
		</ul>`,
		image: ''
	}
})
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<SimpleFeed data={processData} />
	<!-- <CTA /> -->
</Layout>
